@{ 

    Layout = "~/Views/_Layout.cshtml";
}

@model HomeViewModel

    <link href="~/Contents/Home.css" rel="stylesheet" />


    <div class="grid-container homepage-content">


        <heading>

            <h4 class="summer-sale">Summer sales up to 50% off</h4>
            <h1 class="headline">Equip yourself for home gym</h1>


        </heading>


        <div class="sales-item">


            @foreach (var item in Model.Products)
            {


                <div class="card">
                    <div class="card-percentage"> @( (int)((@item.ProductDetail.FirstOrDefault().Price/ @item.ProductDetail.FirstOrDefault().PreviousPrice) *100))%</div>
                    <div class="card-img"> <img src="@Url.Content(item.ProductDetail.FirstOrDefault().Images.FirstOrDefault().Url)" /></div>
                    <div class="card-price">£@item.ProductDetail.FirstOrDefault().Price <span class="card-previous-price">£@item.ProductDetail.FirstOrDefault().PreviousPrice</span></div>
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.ProductId" class="card-cart-button">Add to cart</a>


                </div>
            }

