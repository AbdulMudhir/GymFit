

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>@ViewBag.Title</title>
        <script src="https://code.iconify.design/1/1.0.6/iconify.min.js"></script>

        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
        <link href="~/Contents/reset.css" rel="stylesheet" />
        <link href="~/Contents/_layoutStylesheet.css" rel="stylesheet" />
    </head>



    <body>



        <div class="container-fluid">

            <div class="nav-container container">
                <div class="close-nav">x</div>
                <a a asp-controller="Home" asp-action="index" class="logo">
                    Gym Fit 
                </a>
                @*<div class="search-bar"> <input placeholder="Search entire store " type="text" /></div>*@
                <div class="searchbox-container search-bar ">
                    <i class="fa fa-search search-icon row justifiy-center align-center" aria-hidden="true"></i>

                    <input type="text" id="searchBox" placeholder="What are you looking for..." autocomplete="off" required />
                    <ul class="searchResult">
                    </ul>
                    <span class="field-validation-error searcherror">No Results Found</span>
                </div>


                <div class="cart-container">
                    <a class="admin-portal" asp-controller="Admin" asp-action="index">Admin Portal</a>
                    <a asp-controller="cart" asp-action="index" asp- class="cart">
                        <div class="cart-img">
                            <span class="iconify cart-img" data-inline="false" data-icon="ant-design:shopping-cart-outlined" >
                            </span><div class="cart-total">0</div>
                        </div> <p class="cart-price"><span class="price-divider">-</span><span id="currency">£</span> <p class="cart-total_price" style="font-weight: 700;">0</p>

                    </a>
                </div>
            </div>

            <div class="navigation">
                @await Component.InvokeAsync("Navigation")
            </div>



            <div class="container content">



                @RenderBody()
            </div>
        </div>



        @RenderSection("Scripts", required: false)
        <script src="~/Scripts/StoreScript.js"></script>
        <script src="~/Scripts/sharedCartScript.js"></script>
        <script src="~/Scripts/searchbox.js"></script>
        <script>
            updateCartTotalPrice()
        </script>
    </body>
    </html>